<h1>口コミ一覧</h1>
<p><%= link_to '口コミを投稿する', new_shop_review_path %></p>

<% @reviews.each do |review|%>
  <p><%= review.user.name %></p>
  <% if review.user_id == current_user&.id %>
    <%= link_to "編集", edit_shop_review_path(@shop, review) %>
    <%= link_to "削除", shop_review_path(@shop, review), method: :delete, data: { confirm: "削除しますか？" } %>
  <% end %>

  <div id="star-score<%= review.id%>"></div>    
    <script>
      $('#star-score<%= review.id%>').empty();
      $('#star-score<%= review.id%>').raty({
        readOnly: true,
        size      : 36,
        starOff   : '<%= asset_path('star-off.png') %>',
        starOn    : '<%= asset_path('star-on.png') %>',
        starHalf: "<%= asset_path('star-half.png') %>",
        half      : false,
        readOnly: true,
        score: <%= review.score %>,
      });
    </script>
    <p><%= review.score.to_f %>点</p>
    <p><%= review.title %></p>
    <p><%= review.content %></p>
    <p><%= review.created_at.strftime('%Y/%m/%d') %></p>
  </div>
<% end %>
