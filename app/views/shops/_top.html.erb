<div class="text-center mt-3">
  <%= image_tag @shop.image.url, size: "320x240" %>
</div>
<table class="table">
  <p class="shop-table">詳細情報</p>
  <tbody>
    <tr>
      <th class="bg-light top-th">店舗名</th>
      <td><%= @shop.name %></td>
    </tr>
    <tr>
      <th class="bg-light top-th">エリア</th>
      <td><%= @shop.area.name %></td>
    </tr>
    <tr>
      <th class="bg-light top-th">ジャンル</th>
      <td><%= @shop.genre.name %></td>
    </tr>
    <tr>
      <th class="bg-light top-th">ブランド</th>
      <td><%= @shop.brand.name %></td>
    </tr>
    <tr>
    <tr>
      <th class="bg-light top-th">住所</th>
      <td><%= @shop.address %></td>
    </tr>
    <tr>
      <th class="bg-light top-th">紹介文</th>
      <td><%= @shop.content %></td>
    </tr>
    <tr>
  </tbody>
</table>
