<div class="container">
  <h2 class="text-center my-4 font-weight-bold"><%= @user.name %>さんのマイページ</h2>
  <div class="text-center mb-3">
    <%= image_tag @user.image.url, class: "rounded img-fluid", size: "200x200"%>
  </div>
  <ul class="nav nav-pills nav-justified" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="top-tab" data-toggle="tab" href="#top" role="tab" aria-controls="top" aria-selected="true">
      トップ</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="like-tab" data-toggle="tab" href="#like" role="tab" aria-controls="like" aria-selected="false">保存済みのお店 <%= @user.liked_shops.count%>件</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="review-tab" data-toggle="tab" href="#review" role="tab" aria-controls="review" aria-selected="false">口コミしたお店 <%= @user.reviewed_shops.count%>件</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="top" role="tabpanel" aria-labelledby="top-tab">
    <form>
      <div class="mx-auto form-group" style="max-width: 80%" >
        <label for="exampleFormControlTextarea1">
        <h5 class="m-3 readonly">自己紹介</h5>
        </label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" readonly><%= @user.self_introduction %>
        </textarea>
      </div>
    </form>
    </div>
    <div class="tab-pane fade" id="like" role="tabpanel" aria-labelledby="like-tab">
      <div class="cover-user-show">
        <div class="mx-auto" style="max-width: 80%" >
          <% if current_user.liked_shops.present? %>
            <% current_user.liked_shops.each do |shop| %>
              <%= link_to shop do %>
                <div class="py-3 border-top ">
                  <h4 class="mb-3 font-weight-bold"><%= shop.name %></h4>
                  <div class="row">
                    <div class="col-lg-3 mb-3">
                      <%= image_tag shop.image.url, class: "rounded", size: "200x200" %>
                    </div>
                    <div class="col-lg-9">
                      <div class="text-dark">
                        <h5 class="shop-area-genre"><%= shop.area.name %> / <%= shop.genre.name %></h5>
                        <h5 class="shop-access"><%= shop.access %></h5>
                      </div>
                      <div class="col-shop-score">
                        <div class="average-score" data-score=<%= shop.average_score %>></div>
                        <script>
                          $('.average-score').empty();
                            $('.average-score').raty({
                              readOnly: true,
                              starOn: "<%= asset_path('star-on.png') %>",
                              starOff: "<%= asset_path('star-off.png') %>",
                              starHalf: "<%= asset_path('star-half.png') %>",
                              score: function() {
                                return $(this).attr('data-score')
                              }
                            });
                        </script>
                      </div>
                      <div class="col-shop-average">
                        <h4 class="text-danger"><%= shop.average_score %></h4>
                      </div>
                      <div class="text-dark">
                        <div class="fas fa-comment-dots "> <%= shop.reviews.count %> 件</div>
                        <div class="fas fa-bookmark"> <%= shop.likes.count %> 件</div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %> 
            <% end %>
          <% else %>
            <h4 class="text-center mt-5">保存済みのお店はありません。</h4>
          <% end %>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="review" role="tabpanel" aria-labelledby="review-tab">
      <div class="cover-user-show">
        <div class="mx-auto" style="max-width: 80%" >
          <% if current_user.reviewed_shops.present? %>
            <% current_user.reviewed_shops.each do |shop| %>
              <%= link_to shop do %>
                <div class="py-3 border-top ">
                  <h4 class="mb-3 font-weight-bold"><%= shop.name %></h4>
                  <div class="row">
                    <div class="col-lg-3 mb-3">
                      <%= image_tag shop.image.url, class: "rounded", size: "200x200" %>
                    </div>
                    <div class="col-lg-9">
                      <div class="text-dark">
                        <h5 class="shop-area-genre"><%= shop.area.name %> / <%= shop.genre.name %></h5>
                        <h5 class="shop-access"><%= shop.access %></h5>
                      </div>
                      
                      <div class="col-shop-score">
                        <div class="average-score" data-score=<%= shop.average_score %>></div>
                        <script>
                          $('.average-score').empty();
                            $('.average-score').raty({
                              readOnly: true,
                              starOn: "<%= asset_path('star-on.png') %>",
                              starOff: "<%= asset_path('star-off.png') %>",
                              starHalf: "<%= asset_path('star-half.png') %>",
                              score: function() {
                                return $(this).attr('data-score')
                              }
                            });
                        </script>
                      </div>
                      <div class="col-shop-average">
                        <h4 class="text-danger"><%= shop.average_score %></h4>
                      </div>
                      <div class="text-dark">
                        <div class="fas fa-comment-dots "> <%= shop.reviews.count %> 件</div>
                        <div class="fas fa-bookmark"> <%= shop.likes.count %> 件</div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %> 
            <% end %>
          <% else %>
            <h4 class="text-center mt-5">口コミしたお店はありません。</h4>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
