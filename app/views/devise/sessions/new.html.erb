<h3 class="font-weight-bold text-center mt-5">ログイン</h3>
<div class="mx-auto" style="max-width: 70%" >
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
    </div>

    <div class="field">
      <%= f.label :password,class:"sign_up_title" %>
      <% if @minimum_password_length %>
      <em class="sign_up_title"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit t('.sign_in'),class:"btn btn-lg btn-secondary px-5 mt-3 " %>
    </div>
    <div class="text-center">
      <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class:"btn btn-lg btn-success mt-3" %>
    </div>

  <% end %>
  <div class="registration-link">
    <%= render "devise/shared/links" %>
  </div>
</div>
